        ],
        "summary": "Authenticate user",
        "description": "",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "john.doe@email.com",
                  "password": "Qwerty123"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authenticated",
