{
  "compilerOptions": {
    "target": "es2018",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "src/",
    "paths": {
      "~/*": ["*"],
      "@/*": ["modules/*"]
    },
    "resolveJsonModule": true,
    "outDir": "build/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  }
}
